{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "time": {
      "required": false,
      "type": "datetime"
    },
    "hometext": {
      "type": "richtext"
    },
    "bodytext": {
      "type": "richtext"
    },
    "category": {
      "model": "categories",
      "via": "articles"
    },
    "topic": {
      "model": "topic",
      "via": "articles"
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "spanish",
        "english"
      ],
      "default": "spanish",
      "required": true
    }
  }
}
